---
// Navigation.astro
import { Icon } from 'astro-icon/components';

const navItems = [
  { label: "Apunta", href: "#day" },
  { label: "Detalles", href: "#details" },
  { label: "Alojamiento", href: "#accommodation" },
  { label: "Formulario", href: "#form" },
  { label: "Regalo", href: "#gift-account" },
  { label: "Galería", href: "#gallery" },
];
---

<nav class="navbar" id="navbar">
  <div class="container">
    <div class="navbar__wrapper">
      <a href="#" class="navbar__logo">
        F & M
      </a>

      <!-- Desktop Navigation -->
      <div class="navbar__menu">
        {navItems.map((item) => (
          <a href={item.href} class="navbar__link">
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button 
        class="navbar__toggle" 
        id="menuToggle"
        aria-label="Toggle menu"
      >
        <Icon name="lucide:menu" class="icon icon--menu" />
        <Icon name="lucide:x" class="icon icon--close" />
      </button>
    </div>
  </div>

  <!-- Mobile Navigation (FUERA del container para full-screen) -->
  <div class="navbar__mobile" id="mobileMenu">
    <div class="navbar__mobile-content">
      {navItems.map((item) => (
        <a href={item.href} class="navbar__mobile-link">
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');
  const menuToggle = document.getElementById('menuToggle');
  const mobileMenu = document.getElementById('mobileMenu');
  let lastScrollY = window.scrollY;

  // Handle scroll behavior
  const handleScroll = () => {
    const currentScrollY = window.scrollY;
    
    if (currentScrollY > 50) {
      navbar?.classList.add('navbar--scrolled');
    } else {
      navbar?.classList.remove('navbar--scrolled');
    }
    
    lastScrollY = currentScrollY;
  };

  window.addEventListener('scroll', handleScroll);

  // Handle mobile menu toggle
  menuToggle?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('navbar__mobile--open');
    menuToggle?.classList.toggle('navbar__toggle--active');
    
    // Prevent body scroll when menu is open BUT allow menu scroll
    if (isOpen) {
      document.body.style.overflow = 'hidden';
      document.body.style.position = 'fixed';
      document.body.style.width = '100%';
    } else {
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.width = '';
    }
  });

  // Close mobile menu when clicking on links
  const mobileLinks = document.querySelectorAll('.navbar__mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('navbar__mobile--open');
      menuToggle?.classList.remove('navbar__toggle--active');
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.width = '';
    });
  });

  // Close menu on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('navbar__mobile--open')) {
      mobileMenu?.classList.remove('navbar__mobile--open');
      menuToggle?.classList.remove('navbar__toggle--active');
      document.body.style.overflow = '';
      document.body.style.position = '';
      document.body.style.width = '';
    }
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background-color: transparent;
  }

  .navbar--scrolled {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .navbar__wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 5rem;
  }

  .navbar__logo {
    font-family: 'Birthstone';
    font-size: 2rem;
    font-weight: 300;
    color: #1a1a1a;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .navbar__logo:hover {
    color: #3b82f6;
    transform: scale(1.05);
  }

  /* Desktop Navigation */
  .navbar__menu {
    display: none;
    align-items: center;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .navbar__menu {
      display: flex;
    }
  }

  .navbar__link {
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: #374151;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
  }

  .navbar__link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #1d4ed8);
    transition: width 0.3s ease;
  }

  .navbar__link:hover {
    color: #3b82f6;
  }

  .navbar__link:hover::after {
    width: 100%;
  }

  /* Mobile Menu Button */
  .navbar__toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    padding: 0;
    background: rgba(255, 255, 255, 0.8);
    border: 2px solid rgba(59, 130, 246, 0.2);
    border-radius: 0.5rem;
    cursor: pointer;
    color: #374151;
    transition: all 0.3s ease;
    position: relative;
  }

  .navbar__toggle:hover {
    background: rgba(59, 130, 246, 0.1);
    border-color: #3b82f6;
    transform: scale(1.05);
  }

  @media (min-width: 768px) {
    .navbar__toggle {
      display: none;
    }
  }

  .icon {
    width: 1.5rem;
    height: 1.5rem;
    position: absolute;
    transition: all 0.3s ease;
  }

  .icon--menu {
    opacity: 1;
    transform: rotate(0deg);
  }

  .icon--close {
    opacity: 0;
    transform: rotate(90deg);
  }

  .navbar__toggle--active .icon--menu {
    opacity: 0;
    transform: rotate(-90deg);
  }

  .navbar__toggle--active .icon--close {
    opacity: 1;
    transform: rotate(0deg);
  }

  /* Mobile Navigation */
  .navbar__mobile {
    position: fixed;
    top: 5rem;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.98) 0%,
      rgba(248, 250, 252, 0.98) 100%
    );
    backdrop-filter: blur(20px);
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow-y: auto;
    overflow-x: hidden;
    z-index: 40;
    /* IMPORTANTE: Permitir scroll dentro del menú */
    -webkit-overflow-scrolling: touch;
  }

  .navbar__mobile--open {
    transform: translateX(0);
  }

  @media (min-width: 768px) {
    .navbar__mobile {
      display: none !important;
    }
  }

  .navbar__mobile-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 2rem 1.5rem;
    animation: slideInRight 0.4s ease-out;
  }

  .navbar__mobile-link {
    font-size: 1.125rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    color: #374151;
    text-decoration: none;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    background: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .navbar__mobile-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .navbar__mobile-link:hover::before {
    left: 100%;
  }

  .navbar__mobile-link:hover {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
    border-color: #3b82f6;
    transform: translateX(8px);
  }

  .navbar__mobile-link:active {
    transform: translateX(4px) scale(0.98);
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

---
// GiftAccountSection.astro
import { Icon } from 'astro-icon/components';

interface Props {
  accountLabel?: string;
  accountNumber: string;
  bankName?: string;
  ibanLabel?: string;
}

const {
  accountLabel = '',
  accountNumber,
  bankName = '',
  ibanLabel = '',
} = Astro.props;
---

<section id="gift-account" class="gift-account-section">
  <div class="gift-account-section__background">
    <div class="gift-account-section__pattern"></div>
    <div class="gift-account-section__gradient"></div>
  </div>

  <div class="gift-account-section__container">
    <h2 class="gift-account-section__heading">Detalle</h2>

    <p class="gift-account-section__subtitle">
      Vuestra presencia es el mejor regalo. Si deseáis contribuir a nuestro viaje de novios, 
      os dejamos esta información con todo nuestro cariño y agradecimiento.
    </p>

    <div class="gift-card">
      <div class="gift-card__header">
        <div class="gift-card__title-wrapper">
          <div>
            <h3 class="gift-card__title">{accountLabel}</h3>
            {bankName && <p class="gift-card__bank">{bankName}</p>}
          </div>
        </div>

      </div>

      <div class="gift-card__content">
        {ibanLabel && <p class="gift-card__iban-label">{ibanLabel}</p>}

        <div class="gift-card__iban-wrapper">
          <span class="gift-card__iban">
            {accountNumber}
          </span>
        </div>

        <button
          type="button"
          class="gift-card__copy-button"
          data-account={accountNumber}
          aria-label="Copiar número de cuenta"
        >
          <Icon name="lucide:copy" class="gift-card__copy-icon" />
          <span class="gift-card__copy-label">Copiar</span>
        </button>

        <p
          class="gift-card__copy-feedback"
          role="status"
          aria-live="polite"
        ></p>
      </div>
    </div>
  </div>
</section>

<script>
  if (typeof window !== 'undefined') {
    const copyButton = document.querySelector<HTMLButtonElement>(
      '.gift-card__copy-button'
    );
    const feedback = document.querySelector<HTMLElement>(
      '.gift-card__copy-feedback'
    );
    const ibanElement = document.querySelector<HTMLElement>(
      '.gift-card__iban'
    );

    if (copyButton && feedback && ibanElement) {
      copyButton.addEventListener('click', async () => {
        const value = copyButton.dataset.account || '';

        try {
          await navigator.clipboard.writeText(value);
          
          // Activate sparkle animation
          ibanElement.classList.add('gift-card__iban--sparkle');
          copyButton.classList.add('gift-card__copy-button--success');
          feedback.textContent = '¡Copiado!';
          
          // Remove sparkle animation after 2.5s
          setTimeout(() => {
            ibanElement.classList.remove('gift-card__iban--sparkle');
            copyButton.classList.remove('gift-card__copy-button--success');
            feedback.textContent = '';
          }, 2500);
        } catch (error) {
          feedback.textContent = 'No se ha podido copiar.';
        }
      });
    }
  }
</script>

<style>
  .gift-account-section {
    padding: 6rem 1rem;
    position: relative;
    overflow: hidden;
  }

  .gift-account-section__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .gift-account-section__pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 15% 20%, rgba(59, 130, 246, 0.08) 0%, transparent 55%),
      radial-gradient(circle at 85% 80%, rgba(129, 140, 248, 0.08) 0%, transparent 55%);
    background-size: 120px 120px;
  }

  .gift-account-section__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(248, 250, 252, 0.95) 0%,
      rgba(255, 255, 255, 0.98) 50%,
      rgba(248, 250, 252, 0.95) 100%
    );
  }

  .gift-account-section__container {
    max-width: 72rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .gift-account-section__heading {
    font-family: serif;
    font-size: 3rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  @media (min-width: 768px) {
    .gift-account-section__heading {
      font-size: 3.5rem;
    }
  }

  .gift-account-section__subtitle {
    text-align: center;
    color: #6b7280;
    font-size: 1.1rem;
    margin-bottom: 3.5rem;
    max-width: 40rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  .gift-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    padding: 2.5rem 2rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 4px 10px -2px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .gift-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
  }

  .gift-card__title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    min-width: 0;
  }

  .gift-card__icon {
    width: 2rem;
    height: 2rem;
    color: #3b82f6;
    flex-shrink: 0;
  }

  .gift-card__title {
    font-family: serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin: 0;
    color: #1a1a1a;
  }

  .gift-card__bank {
    margin: 0.25rem 0 0;
    font-size: 0.9rem;
    color: #6b7280;
  }

  .gift-card__badge {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 0.35rem 1rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .gift-card__content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .gift-card__iban-label {
    margin: 0;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #9ca3af;
    font-weight: 500;
  }

  .gift-card__iban-wrapper {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
    background: radial-gradient(circle at 0% 0%, #eff6ff 0%, #ffffff 40%, #e0f2fe 100%);
    border: 2px solid rgba(59, 130, 246, 0.25);
    min-height: 3.5rem;
    overflow: hidden;
  }

  .gift-card__iban {
    font-family: 'Courier New', ui-monospace, SFMono-Regular, Menlo, Monaco,
      Consolas, 'Liberation Mono';
    font-size: 1.35rem;
    letter-spacing: 0.15em;
    font-weight: 600;
    color: #0f172a;
    text-align: center;
    line-height: 1.5;
    word-break: break-all;
    padding: 0 0.5rem;
    position: relative;
    display: inline-block;
    transition: all 0.3s ease;
  }

  /* Sparkle animation on copy */
  .gift-card__iban--sparkle {
    background: linear-gradient(
      120deg,
      #0f172a,
      #1d4ed8,
      #38bdf8,
      #e5e7eb,
      #60a5fa,
      #1d4ed8,
      #0f172a
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: glitter-sparkle 2.5s ease-in-out;
  }

  .gift-card__iban--sparkle::before,
  .gift-card__iban--sparkle::after {
    content: '';
    position: absolute;
    inset: -40%;
    background-image:
      radial-gradient(circle, rgba(255, 255, 255, 0.9) 0, transparent 50%),
      radial-gradient(circle, rgba(191, 219, 254, 0.95) 0, transparent 50%),
      radial-gradient(circle, rgba(96, 165, 250, 0.9) 0, transparent 50%);
    mix-blend-mode: screen;
    pointer-events: none;
    animation: glitter-trail 2.5s ease-in-out;
  }

  .gift-card__iban--sparkle::after {
    filter: blur(2px);
    animation: glitter-trail-secondary 2.5s ease-in-out;
  }

  .gift-card__copy-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    border-radius: 0.5rem;
    border: 2px solid #3b82f6;
    background: #ffffff;
    color: #1d4ed8;
    font-size: 0.9rem;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    align-self: center;
    margin-top: 0.25rem;
  }

  .gift-card__copy-button:hover {
    background: #3b82f6;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  .gift-card__copy-button--success {
    background: #22c55e;
    border-color: #16a34a;
    color: #ffffff;
  }

  .gift-card__copy-icon {
    width: 1.125rem;
    height: 1.125rem;
  }

  .gift-card__hint {
    margin: 0.25rem 0 0;
    font-size: 0.85rem;
    color: #6b7280;
    line-height: 1.55;
    text-align: center;
  }

  .gift-card__copy-feedback {
    margin: 0;
    font-size: 0.85rem;
    color: #16a34a;
    min-height: 1.2rem;
    text-align: center;
    font-weight: 500;
  }

  /* Responsive mobile */
  @media (max-width: 640px) {
    .gift-account-section {
      padding: 4rem 1rem;
    }

    .gift-card {
      padding: 2rem 1.5rem;
    }

    .gift-card__header {
      flex-direction: column;
      align-items: flex-start;
    }

    .gift-card__title {
      font-size: 1.25rem;
    }

    .gift-card__iban {
      font-size: 1rem;
      letter-spacing: 0.08em;
    }

    .gift-card__copy-button {
      width: 100%;
    }
  }

  /* Glitter animations */
  @keyframes glitter-trail {
    0% {
      opacity: 0;
      transform: translateX(-120%) translateY(10%) rotate(0deg);
      background-position: 0 0, 40% 40%, 80% 20%;
    }
    20% {
      opacity: 1;
    }
    50% {
      opacity: 0.9;
      background-position: 40% 40%, 80% 20%, 0 0;
    }
    80% {
      opacity: 0.6;
    }
    100% {
      opacity: 0;
      transform: translateX(120%) translateY(-10%) rotate(8deg);
      background-position: 80% 20%, 0 0, 40% 40%;
    }
  }

  @keyframes glitter-trail-secondary {
    0% {
      opacity: 0;
      transform: translateX(120%) translateY(-10%) rotate(-5deg);
      background-position: 80% 0, 10% 60%, 50% 30%;
    }
    25% {
      opacity: 0.8;
    }
    60% {
      opacity: 0.5;
    }
    100% {
      opacity: 0;
      transform: translateX(-120%) translateY(10%) rotate(4deg);
      background-position: 10% 60%, 50% 30%, 80% 0;
    }
  }

  @keyframes glitter-sparkle {
    0% {
      background-position: 0% center;
      text-shadow:
        0 0 4px rgba(191, 219, 254, 0.4),
        0 0 10px rgba(59, 130, 246, 0.5);
    }
    25% {
      text-shadow:
        0 0 8px rgba(219, 234, 254, 0.7),
        0 0 18px rgba(59, 130, 246, 0.8),
        0 0 25px rgba(96, 165, 250, 0.6);
    }
    50% {
      background-position: 100% center;
      text-shadow:
        0 0 12px rgba(219, 234, 254, 0.9),
        0 0 24px rgba(59, 130, 246, 1),
        0 0 35px rgba(96, 165, 250, 0.8);
    }
    75% {
      text-shadow:
        0 0 8px rgba(219, 234, 254, 0.7),
        0 0 18px rgba(59, 130, 246, 0.8),
        0 0 25px rgba(96, 165, 250, 0.6);
    }
    100% {
      background-position: 200% center;
      text-shadow:
        0 0 4px rgba(191, 219, 254, 0.4),
        0 0 10px rgba(59, 130, 246, 0.5);
    }
  }
</style>

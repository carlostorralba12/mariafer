---
// GoogleForm.astro
interface Props {
  shortlink?: string;
  formId?: string;
  height?: string;
  width?: string;
  title?: string;
}

const { 
  shortlink = 'https://forms.gle/R7rp1cRfPhWY1gwdA', 
  formId, 
  height = '900', 
  width = '100%', 
  title = 'Formulario'
} = Astro.props;

const embedUrl = formId 
  ? `https://docs.google.com/forms/d/e/${formId}/viewform?embedded=true`
  : `${shortlink}?embedded=true`;
---
<section id="form" class="google-form-container">
  <div class="google-form-header">
    <h2 class="title-form">{title}</h2>
    <p class="google-form-subtitle">
      Por favor, rellena el siguiente formulario para confirmar tu asistencia y cualquier detalle adicional.
    </p>
  </div>
  <div class="google-form-content">
    <iframe
      src={embedUrl}
      class="form-iframe"
      frameborder="0"
      title={title}
      loading="lazy"
      allowtransparency="true" 
      allow="geolocation; microphone; camera"
      allowfullscreen
    >
      <p>
        Tu navegador no soporta iframes. 
        <a href={embedUrl} target="_blank" rel="noopener noreferrer">
          Abrir formulario
        </a>.
      </p>
    </iframe>
  </div>
</section>

<style>
  .google-form-container {
    padding: 6rem 1rem;
    position: relative;
    overflow: hidden;
  }

  .google-form-header {
    margin-bottom: 2rem;
  }

  .google-form-content {
    max-width: 1000px;
    margin: 0 auto;
    border-radius: 1.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(16px);
    overflow: hidden;
  }

  .title-form {
    font-family: serif;
    font-size: 3rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .google-form-subtitle {
    text-align: center;
    color: #6b7280;
    font-size: 1.125rem;
    margin-bottom: 0;
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .form-iframe {
    width: 100%;
    height: 900px;
    border-radius: 0.75rem;
    border: 0;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .google-form-container a {
    color: #2563eb;
    text-decoration: underline;
    font-weight: 500;
  }

  .google-form-container a:hover {
    color: #1d4ed8;
  }

  /* Mobile: altura grande + scroll en p√°gina */
  @media (max-width: 767px) {
    .google-form-container {
      padding: 3rem 0.5rem;
    }
    
    .title-form {
      font-size: 2.25rem;
    }
    
    .google-form-subtitle {
      font-size: 1rem;
      padding: 0 1rem;
    }
    
    .google-form-content {
      max-width: none;
      margin: 0 0.5rem;
      border-radius: 1rem;
      overflow: visible;
      -webkit-overflow-scrolling: touch;
    }
    
    .form-iframe {
      height: 2000px;
      min-height: 100vh;
      border-radius: 0.5rem;
      box-shadow: none;
    }
  }

  /* Desktop */
  @media (min-width: 768px) {
    .title-form {
      font-size: 3.75rem;
    }
  }
</style>

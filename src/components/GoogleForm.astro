---
// GoogleForm.astro
interface Props {
  shortlink?: string;
  formId?: string;
  height?: string;
  width?: string;
  title?: string;
}

const { 
  shortlink = 'https://forms.gle/R7rp1cRfPhWY1gwdA', 
  formId, 
  height = '900', 
  width = '100%', 
  title = 'Formulario'
} = Astro.props;

const embedUrl = formId 
  ? `https://docs.google.com/forms/d/e/${formId}/viewform?embedded=true`
  : `${shortlink}?embedded=true`;
---
<section id="form" class="google-form-container">
  <div class="google-form-header">
    <h2 class="title-form">{title}</h2>
     <p class="google-form-subtitle">
      Por favor, rellena el siguiente formulario para confirmar tu asistencia y cualquier detalle adicional.
    </p>
  </div>
  <div class="google-form-content">
      <iframe
        src={embedUrl}
        style={`height: ${height}px; width: ${width}px;`}
        frameborder="0"
        title={title}
        loading="lazy"
        allowtransparency="true" 
        allow="geolocation; microphone; camera"
        allowfullscreen
      >
        <p>
          Tu navegador no soporta iframes. 
          <a href={embedUrl} target="_blank" rel="noopener noreferrer">
            Abrir formulario
          </a>.
        </p>
      </iframe>
    </div>
  </section>

<style>
  .google-form-container {
    padding: 6rem 1rem;
    position: relative;
    overflow: hidden;
  }
  .google-form-content {
    max-width: 1000px; /* 4xl = 72rem * 12.5px â‰ˆ 896px */
    margin: 0 auto;
    border-radius: 1.5rem; /* rounded-2xl */
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); /* shadow-2xl */
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(16px); /* backdrop-blur-sm */
  }

  .title-form {
    font-family: serif;
    font-size: 3rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .google-form-subtitle {
    text-align: center;
    color: #6b7280; /* gray-500 */
    font-size: 1.125rem; /* text-lg */
    margin-bottom: 2rem; /* mb-8 */
    max-width: 36rem; /* max-w-md */
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }


  .google-form-container iframe {
    width: 100%;
    border-radius: 0.75rem; /* rounded-xl */
    border: 0;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
  }



  .google-form-container a {
    color: #2563eb; /* blue-600 */
    text-decoration: underline;
    font-weight: 500; /* font-medium */
  }

  .google-form-container a:hover {
    color: #1d4ed8; /* blue-800 */
  }
    @media (min-width: 768px) {
    .title-form{
      font-size: 3.75rem;
    }
  }
</style>

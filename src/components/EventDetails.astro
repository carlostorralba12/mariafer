---
// EventDetails.astro
import { Icon } from 'astro-icon/components';

const events = [
  {
    icon: 'lucide:bus',
    title: 'Autobuses de ida',
    time: '12:00',
    description: 'Salida desde AC Hotel hacia finca Siempreverde',
  },
  {
    icon: 'lucide:users',
    title: 'Llegada',
    time: '12:30',
    description: 'Recepción de invitados y bienvenida',
  },
  {
    icon: 'lucide:heart',
    title: 'Ceremonia',
    time: '13:00',
    description: 'Acompáñanos mientras intercambiamos nuestros votos',
  },
  {
    icon: 'lucide:arrow-left-circle',
    title: 'Autobuses de vuelta',
    time: '00:00',
    description: 'Salida desde finca Siempreverde hacia AC Hotel',
  },
];

// Coordenadas de Finca Siempreverde Murcia
const venueLocation = {
  name: 'Finca Siempreverde',
  address: 'Cmo. Don Luis, 12',
  city: 'Murcia',
  postalCode: '30110',
  country: 'España',
  lat: '38.0377627762055',
  lng: '-1.1308127423302332',
  googleMapsUrl:
    'https://www.google.com/maps/search/?api=1&query=Finca+Siempreverde+Murcia',
};
---

<section id="details" class="event-details">
  <!-- Background Image -->
  <div class="event-details__background">
    <img
      src="/mariafer/bgLimones3.png"
      alt="Finca Siempreverde"
      class="event-details__background-image"
      loading="lazy"
    />
    <div class="event-details__overlay"></div>
  </div>

  <div class="event-details__container">
    <h2 class="event-details__heading">Evento</h2>
    
    <p class="event-details__subtitle">
      Toda la información que necesitas saber sobre el día de nuestra boda
    </p>

    <!-- Events Grid -->
    <div class="event-details__grid">
      {events.map((event, index) => (
        <div class="event-card" style={`animation-delay: ${index * 0.1}s`}>
          <div class="event-card__header">
            <Icon name={event.icon} class="event-card__icon" />
            <p class="event-card__time">{event.time}</p>
          </div>

          <div class="event-card__content">
            <h3 class="event-card__title">{event.title}</h3>
            <p class="event-card__description">{event.description}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Venue Card with Google Maps -->
    <div class="venue-card">
      <div class="venue-card__map">
        <iframe
          src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3145.123!2d${venueLocation.lng}!3d${venueLocation.lat}!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM0fCsDU5JzMxLjkiTiAxwrAwNyc1MC41Ilc!5e0!3m2!1ses!2ses!4v1234567890123!5m2!1ses!2ses`}
          width="100%"
          height="300"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación Finca Siempreverde"
        ></iframe>
      </div>

      <div class="venue-card__content">
        <div class="venue-card__header">
          <div class="venue-card__title-wrapper">
            <Icon name="lucide:map-pin" class="venue-card__icon" />
            <h3 class="venue-card__title">{venueLocation.name}</h3>
          </div>
        </div>

        <p class="venue-card__address">
          {venueLocation.address}
          <br />
          {venueLocation.postalCode} {venueLocation.city}
          <br />
          {venueLocation.country}
        </p>

        <a
          href={venueLocation.googleMapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="venue-card__link"
        >
          <Icon name="lucide:arrow-up-right" class="venue-card__link-icon" />
          Ver en Google Maps
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .event-details {
    padding: 6rem 1rem;
    position: relative;
    overflow: hidden;
  }

  /* Background Image */
  .event-details__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .event-details__background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
  }

  .event-details__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.75) 0%,
      rgba(255, 255, 255, 0.6) 50%,
      rgba(255, 255, 255, 0.75) 100%
    );
  }

  .event-details__container {
    max-width: 72rem;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .event-details__heading {
    font-family: serif;
    font-size: 3rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  @media (min-width: 768px) {
    .event-details__heading {
      font-size: 3.75rem;
    }
  }

  .event-details__subtitle {
    text-align: center;
    color: #6b7280;
    font-size: 1.125rem;
    margin-bottom: 4rem;
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  /* Events Grid */
  .event-details__grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .event-details__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Event Cards - estilo alineado con hotel-card */
  .event-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    padding: 2.5rem 2rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 4px 10px -2px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
    transform: translateY(20px);
  }

  .event-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15),
      0 8px 20px -5px rgba(0, 0, 0, 0.1);
    border-color: #3b82f6;
  }

  .event-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .event-card__icon {
    width: 2rem;
    height: 2rem;
    color: #3b82f6;
  }

  .event-card__time {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    margin: 0;
  }

  .event-card__content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    text-align: left;
  }

  .event-card__title {
    font-family: serif;
    font-size: 1.25rem;
    font-weight: 500;
    color: #1a1a1a;
    margin: 0;
  }

  .event-card__description {
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.5;
    margin: 0;
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Venue Card - estilo alineado con hotel-card */
  .venue-card {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border: 1px solid #e2e8f0;
    border-radius: 1rem;
    margin-top: 1.5rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 4px 10px -2px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .venue-card__map {
    width: 100%;
    height: 300px;
    background: #f3f4f6;
  }

  .venue-card__map iframe {
    display: block;
    width: 100%;
    height: 100%;
  }

  .venue-card__content {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 767px) {
    .venue-card__content {
      padding: 2rem 1.5rem;
    }
  }

  .venue-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .venue-card__title-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .venue-card__icon {
    width: 1.75rem;
    height: 1.75rem;
    color: #3b82f6;
  }

  .venue-card__title {
    font-family: serif;
    font-size: 1.5rem;
    font-weight: 500;
    margin: 0;
    color: #1a1a1a;
  }

  .venue-card__badge {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    color: white;
    padding: 0.25rem 0.9rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
  }

  .venue-card__address {
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
    font-size: 0.95rem;
  }

  .venue-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #3b82f6;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    border: 2px solid #3b82f6;
    border-radius: 0.5rem;
    margin-top: 0.5rem;
    align-self: flex-start;
    transition: all 0.2s ease;
  }

  .venue-card__link:hover {
    background: #3b82f6;
    color: white;
    transform: translateY(-1px);
  }

  .venue-card__link-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }

  .venue-card__link:hover .venue-card__link-icon {
    transform: rotate(45deg) scale(1.1);
  }
</style>

---
// Hero.astro
// Props interface for component configuration
interface Props {
  imageSrc?: string;
  imageAlt?: string;
  title?: string;
  subtitle?: string;
  date?: string;
  location?: string;
  ctaText?: string;
  ctaHref?: string;
}

// Destructure props with default values
const {
  imageSrc = "/mariafer/mariaFerSicilia.jpg",
  imageAlt = "Wedding venue",
  title = "Fernando & Mar√≠a",
  subtitle = "Nos casamos",
  date = "9 de mayo del 2026",
  location = "Finca Siempreverde (Murcia)",
  ctaText = "RSVP Now",
  ctaHref = "#rsvp"
} = Astro.props;
---

<section class="hero">
  <div class="hero__background">
    <img
      src={imageSrc}
      alt={imageAlt}
      class="hero__image"
      loading="eager"
      fetchpriority="high"
    />
    <div class="hero__overlay"></div>
  </div>

  <div class="hero__content">
    <h1 class="hero__title">
      {title}
    </h1>
    <h2 class="hero__subtitle">{subtitle}</h2>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    padding: 1rem;
    align-items: center;
  }

  .hero__subtitle{
    font-size: 2rem;
    font-family: serif;
    font-weight: 300;
    font-style: italic;
    color: #1a1a1a;
  }
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: -10;
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(255, 255, 255, 0.4);
  }

  .hero__content {
    text-align: center;
    max-width: 56rem;
    margin: 0 auto;
  }

  .hero__title {
    font-family: 'Birthstone', serif;
    font-size: 3.75rem;
    font-weight: 300;
    line-height: 1.1;
    text-wrap: balance;
  }

</style>
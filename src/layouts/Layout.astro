---
import "../styles/global.css"
import BackgroundMusic from '../components/BackgroundMusic.astro';

// Astro doesn't use React Suspense or Next's font loader.
// Instead, load Google Fonts via <link> or a custom CSS variable.
const title = "Fernando & Mar√≠a - Nuestra Boda"
const description = "√önete a nosotros para celebrar nuestro d√≠a especial"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content="v0.app" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üíç</text></svg>" />
    <!-- Google Fonts (replace Next font system) -->

    <link
    rel="preconnect"
    href="https://fonts.googleapis.com"
    />
    <link
    rel="preconnect"
    href="https://fonts.gstatic.com"
    crossorigin
    />
    <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@400;700&display=swap"
    rel="stylesheet"
    />
   <link href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Birthstone&family=Parisienne&display=swap" rel="stylesheet">
     <!-- Open Graph Image -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/mariafer/mariaFerSicilia.jpg" />
    <meta property="og:url" content="https://carlostorralba12.github.io/mariafer/" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/mariafer/mariaFerSicilia.jpg" />
  </head>

  <body class="font-sans antialiased">
    <slot />  <!-- equivalent to {children} -->
    <BackgroundMusic />
    <!-- Script para volver al inicio al recargar -->
    <script is:inline>
      // Ejecutar inmediatamente al cargar
      if ('scrollRestoration' in history) {
        history.scrollRestoration = 'manual';
      }
      
      window.addEventListener('load', () => {
        // Eliminar hash de la URL
        if (window.location.hash) {
          history.replaceState(null, '', window.location.pathname);
        }
        
        // Forzar scroll al top
        window.scrollTo(0, 0);
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
      });

      // Tambi√©n manejar el evento beforeunload para limpiar
      window.addEventListener('beforeunload', () => {
        window.scrollTo(0, 0);
      });
    </script>
  </body>
</html>
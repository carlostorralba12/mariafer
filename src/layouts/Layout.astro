---
import "../styles/global.css"

// Astro doesn't use React Suspense or Next's font loader.
// Instead, load Google Fonts via <link> or a custom CSS variable.
const title = "Sarah & James - Wedding"
const description = "Join us in celebrating our special day"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="generator" content="v0.app" />

    <!-- Google Fonts (replace Next font system) -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class="font-sans antialiased">
    <slot />  <!-- equivalent to {children} -->
  </body>
</html>